<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_800"
    android:id="@+id/linearone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#ff85c9ff"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="150dp" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/abc_action_bar_title_item" />



<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_800"
    android:id="@+id/linear"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editgeoaddress"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:password="false"
            android:hint="address"
            android:textColor="#fff3fff3"
            android:textColorHint="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/yourname"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffffff" />

    </LinearLayout>



        <ImageView
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:id="@+id/imgView"
            android:visibility="visible"
            android:layout_gravity="center_horizontal" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Select Photo"
            android:id="@+id/buttonGallery"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_marginLeft="40dp"
            android:inputType="textPassword"
            android:textColor="#ffffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EmailId"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/emailid"
            android:layout_marginLeft="60dp"
            android:inputType="textEmailAddress"
            android:textColor="#ffffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_marginLeft="70dp"
            android:inputType="phone"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent No."
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/parentno"
            android:layout_marginLeft="70dp"
            android:inputType="phone"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend-1 No."
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/roomie1"
            android:layout_marginLeft="70dp"
            android:inputType="phone"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend-2 No."
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/roomie2"
            android:layout_marginLeft="70dp"
            android:inputType="phone"
            android:textColor="#ffffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:hint="Date Of Birth"
            android:textColorHint="#fff"
            android:id="@+id/birthdate"
            android:gravity="center"
            android:password="false"
            android:textColor="#fff3fff3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Birth"
            android:id="@+id/birthbutton"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#ff69efff"
            android:clickable="true"
            android:onClick="setDate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proffesion"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <!--<EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/profession"
            android:layout_marginLeft="70dp"
            android:inputType="text"
            android:textColor="#ffffffff" />-->
        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/proffesionspinner"
            android:layout_marginLeft="70dp"
            android:textColor="#ffffffff"
            android:entries="@array/proffesionlist"
            android:prompt="@android:color/background_light">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Age"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:layout_marginLeft="70dp"
            android:inputType="number"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Address"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:layout_marginLeft="70dp"
            android:inputType="text"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/language"
            android:layout_marginLeft="70dp"
            android:inputType="text"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd9ff3d" />
       <!-- <EditText
          android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_marginLeft="70dp"
            android:inputType="text"
            android:textColor="#ffffffff" />-->

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/genderspinner"
            android:entries="@array/genderlist"
            android:layout_marginLeft="70dp"
            android:textColor="#ffffffff">

        </Spinner>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
            android:onClick="registerationPost"
            android:layout_marginTop="45dp"
            android:text="Register at RESCUE APP"
            android:background="#ff76e1ff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESCUE APP"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:theme="@style/Base.DialogWindowTitle.AppCompat"
        android:textIsSelectable="true"
        android:textSize="50dp"
        android:textColor="#ffeeff17"
        android:textColorHighlight="#ff4bffec"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLOOD RESCUE APP"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_weight="0.14"
        android:theme="@style/Base.DialogWindowTitle.AppCompat"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textColor="#ff1fffc7"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

    </ScrollView>
</LinearLayout>